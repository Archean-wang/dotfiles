// -*- mode: jsonc -*-
{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 30, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 4, // Gaps between modules (4px)
    "modules-left": [
        "custom/launcher",
        "hyprland/workspaces",
        "tray"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "group/hardware",
        "idle_inhibitor",
        "pulseaudio",
        "network",
        // "cpu",
        // "memory",
        // "temperature",
        // "backlight",
        // "battery",
        "group/power",
        "clock"
    ],
    // Modules configuration
    "custom/launcher": {
        "format": " Ôùª ",
        "on-click": "rofi -show drun"
    },
    "custom/analysis": {
        "format": "ÔàÅ",
        "tooltip-format": "Áä∂ÊÄÅ"
    },
    "custom/poweroff": {
        "format": " ÔÄë ÂÖ≥Êú∫",
        "on-click": "poweroff"
    },
    "custom/reboot": {
        "format": " ÔÄ° ÈáçÂêØ",
        "on-click": "reboot"
    },
    "custom/logout": {
        "format": " Ôãµ Ê≥®ÈîÄ",
        "on-click": "hyprctl dispatch exit"
    },
    "hyprland/workspaces": {
        "format": "{icon} || {windows}",
        "format-window-sepator": " ",
        "on-click": "activate",
        "sort-by-number": true,
        "window-rewrite-default": "ÔÅô",
        "window-rewrite": {
            "title<.*youtube.*>": "ÔÖ™",
            "class<google-chrome>": "Ôâ®",
